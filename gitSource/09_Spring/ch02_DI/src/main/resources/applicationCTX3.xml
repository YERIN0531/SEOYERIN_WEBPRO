<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student1" class="com.lec.ch02.ex3_student.Student">
		<!-- API에서는 매개변수 없는 생성자 함수를 만들 수 없기 때문에 bean 안에 constroctor-arg 만들어주기 -->
		<constructor-arg>
			<value>홍길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>25</value>
		</constructor-arg>
		<constructor-arg>
			<value>3학년</value>
		</constructor-arg>
		<constructor-arg>
			<value>7반</value>
		</constructor-arg>
	</bean>
	<bean id="student2" class="com.lec.ch02.ex3_student.Student">
		<constructor-arg value="성춘향"/>
		<constructor-arg value="22"/>
		<constructor-arg value="2학년"/>
		<constructor-arg value="2반"/>
	</bean>	
	
	<!-- 메인함수에서 쓸 student info bean 생성 -->
	<bean id="studentInfo" class="com.lec.ch02.ex3_student.StudentInfo">
		<constructor-arg ref="student1"/>
	</bean>
</beans>

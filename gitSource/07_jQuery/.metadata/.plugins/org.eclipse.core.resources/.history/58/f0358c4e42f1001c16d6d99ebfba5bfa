<script>
 $(document).ready(function(){
	 $('button').click(function(){ // idConfirm.jsp?mId=aaa
		 var mId = $('#mid').val();

	 // 	 get 앞에는 요청경로를 써줘야 하고, 두번째 매개변수에는 콜백함수를 써줘야됨
		/*
		$.get(요청경로, callback(data, status){
			data : 요청경로의 수행 결과 
			status : success / fail 
		});
		*/
	 	$.get('idConfirm.jsp?mid=' + mId, function(data, status){
	 		//status 가 success면 데이터를 result 안에 넣어라 
	 		if(status=='success'){
	 			$('#result').html(data);
	 		}
	 	});
	 }); // 버튼의 click 이벤트
	 $('#mid').keyup(function(){
		 var mid = $('#mid').val();
		 if(mid.length<2){
			 
		 }else{
			  
		 }
	 });
 });
 </script>

	div#show {width:100px; height: 100px; background-color: red;}
</style>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(function(){
	  $('#goShow').click(function(){
		  $('#show').show();
	  });
	  
	  $('#goHide').click(function(){
		  $('#show').hide();
	  });
	  
  });
</script>

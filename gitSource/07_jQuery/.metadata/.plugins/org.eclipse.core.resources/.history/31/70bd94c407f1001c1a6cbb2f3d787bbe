<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
 $(document).ready(function(){
	 //tr을 클릭하면 tr의 자식들 중 eq(0)번쨰 아이의 텍스트를 가지고 오게끔 
	$('tr').click(function(){// html로 가져오든 text로 가져오든 지금 같은 경우엔 상관없음
		var no = $(this).children().eq(0).text();
// 	alert(no);
	if(isNaN(Number(no))){
		alert('타이틀을 클릭했네');
	}else{
		alert('상세보기 페이지로 가자');
	}
	});
 });
</script>
</head>
